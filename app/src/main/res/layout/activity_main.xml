<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/mainlayoutt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fenge"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimary" />


        <LinearLayout
            android:id="@+id/showdatalayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/showlinearlayout"
            android:layout_below="@+id/fenge"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/showlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shownumbe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/air_bg_gary"
                android:gravity="center"
                android:text="历史数据"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/numbeinf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/air_bg_gary"
                android:gravity="center"
                android:text="数据属性"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/calcnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/air_bg_gary"
                android:gravity="center"
                android:text="挑选"
                android:textSize="15dp" />
        </LinearLayout>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>